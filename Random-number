import random

def guessing_game():
    secret_number = random.randint(1,10)
    max_attempts = 5
    attempts = 0
    
    print("********WELL COME TO GUESSING GAME!******")
    print(f"I'm thinking of a number between 1 and 10.")
    print(f"You have {max_attempts} attempts!")

    while attempts < max_attempts:
        try:
           guess = int(input("\n enter your guess:"))
           attempts += 1
 
           if guess < secret_number:
              print(f"The number is too low!")

           elif guess > secret_number:
              print(f"The number is too high!")

           else:
              print(f"Congratulations! you got it{secret_number} in {attempts} attempts")
              return
   
           remaining = max_attempts - attempts
           if remaining > 0:
             print(f"You have {remaining} attempts")
          
        except ValueError:
         print(f"You insert invalid input!")

    if attempts >= max_attempts and guess != secret_number:
     print(f"Game over!the number is {secret_number}")

guessing_game()
